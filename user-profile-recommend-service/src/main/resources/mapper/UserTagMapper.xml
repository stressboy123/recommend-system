<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gdut.profile.recommend.mapper.UserTagMapper">

    <!-- 通用字段片段（对应 UserTag 实体） -->
    <sql id="baseColumns">
        id, user_id, tag_json, tag_weight_json,
        update_time, update_type
    </sql>

    <!-- 插入单条用户标签 -->
    <insert id="insertUserTagSingle" parameterType="com.gdut.profile.recommend.entity.UserTag">
        INSERT INTO user_tag (
            id, user_id, tag_json, tag_weight_json,
            update_time, update_type
        ) VALUES (
                     #{id}, #{userId}, #{tagJson}, #{tagWeightJson},
                     #{updateTime}, #{updateType}
                 )
    </insert>

    <!-- 批量插入用户标签 -->
    <insert id="insertUserTagMulti" parameterType="java.util.List">
        INSERT INTO user_tag (
        id, user_id, tag_json, tag_weight_json,
        update_time, update_type
        ) VALUES
        <foreach collection="tags" item="item" separator=",">
            (
            #{item.id}, #{item.userId}, #{item.tagJson}, #{item.tagWeightJson},
            #{item.updateTime}, #{item.updateType}
            )
        </foreach>
    </insert>

    <!-- 删除单条用户标签 -->
    <delete id="deleteUserTagSingle" parameterType="java.lang.String">
        DELETE FROM user_tag WHERE id = #{tagId}
    </delete>

    <!-- 批量删除用户标签 -->
    <delete id="deleteUserTagMulti" parameterType="java.util.List">
        DELETE FROM user_tag WHERE id IN
        <foreach collection="tagIds" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- 更新单条用户标签（动态更新非空字段） -->
    <update id="updateUserTagSingle" parameterType="com.gdut.profile.recommend.entity.UserTag">
        UPDATE user_tag
        <set>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="tagJson != null">tag_json = #{tagJson},</if>
            <if test="tagWeightJson != null">tag_weight_json = #{tagWeightJson},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="updateType != null">update_type = #{updateType}</if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 批量更新用户标签（需开启 allowMultiQueries=true） -->
    <update id="updateUserTagMulti" parameterType="java.util.List">
        <foreach collection="tags" item="item" separator=";">
            UPDATE user_tag
            <set>
                <if test="item.userId != null">user_id = #{item.userId},</if>
                <if test="item.tagJson != null">tag_json = #{item.tagJson},</if>
                <if test="item.tagWeightJson != null">tag_weight_json = #{item.tagWeightJson},</if>
                <if test="item.updateTime != null">update_time = #{item.updateTime},</if>
                <if test="item.updateType != null">update_type = #{item.updateType}</if>
            </set>
            WHERE id = #{item.id}
        </foreach>
    </update>

    <!-- 查询单条用户标签 -->
    <select id="selectUserTagSingle" parameterType="java.lang.String" resultType="com.gdut.profile.recommend.entity.UserTag">
        SELECT <include refid="baseColumns"/> FROM user_tag WHERE id = #{tagId}
    </select>

    <!-- 批量查询用户标签 -->
    <select id="selectUserTagMulti" parameterType="java.util.List" resultType="com.gdut.profile.recommend.entity.UserTag">
        SELECT <include refid="baseColumns"/> FROM user_tag WHERE id IN
        <foreach collection="tagIds" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <!-- 按用户ID查询标签 -->
    <select id="selectUserTagByUserId" parameterType="java.lang.String" resultType="com.gdut.profile.recommend.entity.UserTag">
        SELECT <include refid="baseColumns"/> FROM user_tag WHERE user_id = #{userId}
    </select>

    <!-- 查询所有用户标签 -->
    <select id="selectAllUserTag" resultType="com.gdut.profile.recommend.entity.UserTag">
        SELECT <include refid="baseColumns"/> FROM user_tag
    </select>

</mapper>